<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="999.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mymovies.gui.controllers.MainPageController">
   <children>
      <VBox spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <Label alignment="CENTER" text="My movie collection">
            <font>
               <Font name="System Bold" size="19.0" />
            </font>
         </Label>
         <TableView fx:id="movieTableView" prefHeight="235.0" prefWidth="1200.0" VBox.vgrow="NEVER">
            <columns>
               <TableColumn fx:id="idColumn" text="ID" />
               <TableColumn fx:id="nameColumn" text="Name" />
               <TableColumn fx:id="imdbRatingColumn" text="IMDB rating" />
               <TableColumn fx:id="filePathColumn" text="File Path" />
               <TableColumn fx:id="lastViewColumn" text="Last View" />
               <TableColumn fx:id="createdAtColumn" text="Created At" />
               <TableColumn fx:id="updatedAtColumn" text="Updated At" />
               <TableColumn fx:id="personalRatingColumn" text="Rating" />
            </columns>
         </TableView>
         <Pagination fx:id="pagination" prefHeight="49.0" prefWidth="217.0" />
         <HBox alignment="CENTER" spacing="20.0">
            <VBox alignment="CENTER">
               <Label text="Movies">
                  <font>
                     <Font name="System Bold" size="13.0" />
                  </font>
               </Label>
               <HBox alignment="CENTER" spacing="10.0">
                  <Button fx:id="addMovieBtn" mnemonicParsing="false" text="Add" />
                  <Button fx:id="removeMovieBtn" mnemonicParsing="false" text="Remove" />
               </HBox>
            </VBox>
            <VBox alignment="CENTER">
               <Label text="Category">
                  <font>
                     <Font name="System Bold" size="13.0" />
                  </font>
               </Label>
               <HBox alignment="CENTER" spacing="10.0">
                  <Button fx:id="addCategoryBtn" mnemonicParsing="false" text="Add" />
                  <Button fx:id="removeCategoryBtn" mnemonicParsing="false" text="Remove" />
               </HBox>
            </VBox>
         </HBox>
      </VBox>
   </children>
</AnchorPane>
