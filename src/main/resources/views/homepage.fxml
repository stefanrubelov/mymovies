<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="941.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mymovies.gui.controllers.MainPageController">
        <!-- Title Label -->
        <Label layoutX="10.0" layoutY="10.0" text="My movie collection" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0">
            <font>
                <Font name="System Bold" size="19.0" />
            </font>
        </Label>

        <!-- Top Controls (Slider, ComboBox, and Search Bar) -->
        <HBox alignment="CENTER" prefHeight="60.0" prefWidth="456.0" spacing="10.0" AnchorPane.rightAnchor="10.0">
            <Slider fx:id="ratingSlider" blockIncrement="1.0" majorTickUnit="1.0" max="10.0" min="0.0" minorTickCount="0" onMouseDragged="#onRatingSliderChanged" showTickLabels="true" showTickMarks="true" value="0" />
            <Label fx:id="ratingSliderValue" text="10">
         <HBox.margin>
            <Insets bottom="22.0" />
         </HBox.margin></Label>
            <ComboBox fx:id="ratingDropDown" promptText="ratings" onAction="#onCategorySelected">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="IMDB" />
                        <String fx:value="Personal" />
                    </FXCollections>
                </items>
            </ComboBox>
            <TextField fx:id="searchBar" promptText="search movie" />
        </HBox>

        <!-- TableView -->
        <TableView fx:id="movieTableView" layoutX="10.0" layoutY="169.0" prefHeight="231.0" prefWidth="921.0" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="100.0">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" />
                <TableColumn fx:id="nameColumn" text="Name" />
                <TableColumn fx:id="imdbRatingColumn" text="IMDB rating" />
                <TableColumn fx:id="filePathColumn" text="File Path" />
                <TableColumn fx:id="lastViewColumn" text="Last View" />
                <TableColumn fx:id="personalRatingColumn" text="Rating" />
                <TableColumn fx:id="categoriesColumn" text="Categories" />
            </columns>
        </TableView>

        <!-- Bottom Controls -->
        <VBox alignment="CENTER" spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
            <Pagination fx:id="pagination" />
            <HBox alignment="CENTER" spacing="10.0">
                <Button mnemonicParsing="false" onAction="#addNewMovieScene" text="Add new movie" />
                <Button fx:id="viewCategoriesBtn" mnemonicParsing="false" onAction="#viewAllCategoriesScene" text="View categories" />
            </HBox>
        </VBox>
</AnchorPane>
